@using PhatHanhSach.Models
@model Tuple<IEnumerable<CT_PHIEUNHAP>, IEnumerable<PHIEUNHAP>>

<!--Sử dụng AdminLayout-->
@{
    ViewBag.Title = "CT_PhieuNhap";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

            <!--Body-->
            <body class="menu-affix">
                <div class="col-lg-12">
                    <div class="box inverse">

                        <!--Phiếu Nhập-->
                        <header>
                            <h5>Phiếu Nhập</h5>
                        </header>

                        <!--NXB và Ngày Nhập-->
                        <div id="div-1" class="body collapse in" aria-expanded="true" style="position:relative">
                            <div id="collapse4" class="body">
                                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Tên NXB</th>
                                            <th>Ngày Nhập</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var b in Model.Item2)
                                        {
                                            <tr class="sachmodel">
                                            <td class="tennxb">@b.NHAXUATBAN.Ten</td>
                                            <td class="ngaynhap">@b.NgayNhap</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!--Chi Tiết Phiếu Nhập-->
                        <header>
                            <h5>Chi Tiết Phiếu Nhập</h5>
                        </header>
                        
                        <!--Bảng thông tin chi tiết phiếu nhập-->
                        <div id="div-2" class="body collapse in" aria-expanded="true" style="position:relative">
                                <div id="collapse4" class="body">
                                    <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã Sách</th>
                                                <th>Tên Sách</th>
                                                <th>Giá Nhập</th>
                                                <th>Số Lượng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                @foreach (var a in Model.Item1)
                                                {
                                                    <tr class="sachmodel">
                                                    <td class="masach">@a.MaSach</td>
                                                    <td class="tensach">@a.SACH.TenSach</td>
                                                    <td class="giasach">@a.DonGia</td>
                                                    <td class="soluong">@a.SLNhap</td>

                                                    </tr>
                                                }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                </div>
            </body>

