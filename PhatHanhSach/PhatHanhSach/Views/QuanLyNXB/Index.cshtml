@model IEnumerable<PhatHanhSach.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý Nhà Xuất Bản</h1>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Địa Chỉ
        </th>
        <th>
            Số ĐT
        </th>
        <th>
            Số TK
        </th>
        <th>
            Trạng Thái
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaNXB }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.MaNXB }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaNXB })
        </td>
    </tr>
}

</table>

<input type="button" class="btn btn-primary" value="Thêm NXB" onclick="location.href='@Url.Action("Create","QuanLyNXB")'" />
