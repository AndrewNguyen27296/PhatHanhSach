@model IEnumerable<PhatHanhSach.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý Sách</h1>
    </div>
</div>

<table class="table table-bordered">
    <tr>
        <th>
            Tên Sách
        </th>
        <th>
            Tác Giả
        </th>
        <th>
            Lĩnh Vực
        </th>
        <th>
            Đơn Giá Nhập
        </th>
        <th>
            Đơn Giá Xuất
        </th>
        <th>
            Ghi Chú
        </th>
        <th>
            Trạng Thái
        </th>
        <th>
            Tên NXB
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TacGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LinhVuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGiaNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGiaXuat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GhiChu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NHAXUATBAN.Ten)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaSach }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.MaSach }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaSach })
        </td>
    </tr>
}

</table>

<input type="button" class="btn btn-primary" value="Thêm Sách" onclick="location.href='@Url.Action("Create","QuanLySach")'" />
