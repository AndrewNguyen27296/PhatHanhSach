@using PhatHanhSach.Models
@model IEnumerable<PHIEUNHAP>
    
    <!--Sử dụng AdminLayout-->
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Layout/AdminLayout.cshtml";
    }

    <!--Nhúng jQuery-->
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css" />

    <!--Header-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Nhập Sách</h1>
        </div>
    </div>

    <!--Body-->
    <body class="menu-affix">
        <div class="col-lg-12">
            <div class="box inverse">
                <header>
                    <h5 style="background-color: #333; color: #fff; margin: 0; padding: 8px; line-height: 23px; text-shadow: 0 1px 0 #000; border-top: 1px solid #666;">
                    Danh sách các Chi tiết Phiếu Nhập
                    </h5>
                </header>

                <!-- Nếu muốn dùng action link thì xóa dòng này đi-->
               @* @Html.ActionLink("Thêm Phiếu Nhập", "NhapSach", "NhapSach") *@


                <!-- Bảng danh sách các chi tiết phiếu nhập -->
                <table class="table table-bordered">
                    <tr>
                        <th>Mã NXB</th>
                        <th>Tên NXB</th>
                        <th>Ngày Nhập</th>
                        <th>Tổng Tiền</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.MaNXB</th>
                            <th>@item.NHAXUATBAN.Ten</th>
                            <th>@item.NgayNhap</th>
                            <th>@item.TongTien</th>
                            <th>
                                @Html.ActionLink("Xem Chi Tiết", "CT_PhieuNhap", new { @MaPN = item.MaPN })
                            </th>
                        </tr>
                    }
                </table>
                <input type="button" class="btn btn-primary" value="Thêm Phiếu Nhập" onclick="location.href='@Url.Action("NhapSach", "NhapSach")'" />
            </div>
        </div>
    </body>
